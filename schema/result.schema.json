{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "urn:tracelab:schema:result:0.1.0",
  "title": "TraceLab Run Result",
  "type": "object",
  "additionalProperties": true,
  "required": [
    "schema_version",
    "kind",
    "timestamp_utc",
    "mode",
    "command",
    "duration_sec",
    "exit_code",
    "run_metadata",
    "diagnosis",
    "host",
    "collectors"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "minLength": 1
    },
    "kind": {
      "type": "string",
      "const": "run_result"
    },
    "timestamp_utc": {
      "type": "string",
      "format": "date-time"
    },
    "mode": {
      "type": "string",
      "enum": [
        "native",
        "qemu"
      ]
    },
    "command": {
      "type": "string",
      "minLength": 1
    },
    "exec_command": {
      "type": "string"
    },
    "duration_sec": {
      "type": "number",
      "minimum": 0
    },
    "exit_code": {
      "type": "integer"
    },
    "strict": {
      "type": "boolean"
    },
    "run_metadata": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "scenario_label",
        "cache_state"
      ],
      "properties": {
        "scenario_label": {
          "type": "string",
          "minLength": 1
        },
        "cache_state": {
          "type": "string",
          "enum": [
            "cold",
            "warm",
            "unspecified"
          ]
        }
      }
    },
    "diagnosis": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "label",
        "confidence",
        "evidence",
        "limitations"
      ],
      "properties": {
        "label": {
          "type": "string",
          "enum": [
            "cpu-bound",
            "syscall-heavy",
            "io-bound",
            "memory-pressure",
            "inconclusive"
          ]
        },
        "confidence": {
          "type": "string",
          "enum": [
            "low",
            "medium",
            "high"
          ]
        },
        "evidence": {
          "type": "array",
          "minItems": 2,
          "items": {
            "$ref": "#/$defs/diagnosisEvidence"
          }
        },
        "limitations": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "qemu": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "arch"
      ],
      "properties": {
        "arch": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "host": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "os",
        "arch",
        "kernel_version",
        "cpu_model",
        "cpu_governor_hint",
        "tool_versions",
        "git_sha"
      ],
      "properties": {
        "os": {
          "type": "string",
          "minLength": 1
        },
        "arch": {
          "type": "string",
          "minLength": 1
        },
        "kernel_version": {
          "type": "string",
          "minLength": 1
        },
        "cpu_model": {
          "type": "string",
          "minLength": 1
        },
        "cpu_governor_hint": {
          "type": "string",
          "minLength": 1
        },
        "git_sha": {
          "type": "string",
          "minLength": 1
        },
        "tool_versions": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "perf",
            "strace",
            "qemu-x86_64",
            "qemu-aarch64",
            "qemu-riscv64"
          ],
          "properties": {
            "perf": {
              "type": "string",
              "minLength": 1
            },
            "strace": {
              "type": "string",
              "minLength": 1
            },
            "qemu-x86_64": {
              "type": "string",
              "minLength": 1
            },
            "qemu-aarch64": {
              "type": "string",
              "minLength": 1
            },
            "qemu-riscv64": {
              "type": "string",
              "minLength": 1
            }
          }
        }
      }
    },
    "collectors": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "perf_stat",
        "strace_summary",
        "proc_status"
      ],
      "properties": {
        "perf_stat": {
          "$ref": "#/$defs/collectorStatus"
        },
        "strace_summary": {
          "$ref": "#/$defs/collectorStatus"
        },
        "proc_status": {
          "$ref": "#/$defs/collectorStatus"
        }
      }
    }
  },
  "$defs": {
    "collectorStatus": {
      "type": "object",
      "additionalProperties": true,
      "required": [
        "status"
      ],
      "properties": {
        "status": {
          "type": "string",
          "enum": [
            "ok",
            "error",
            "unavailable",
            "pending_implementation"
          ]
        },
        "reason": {
          "type": "string"
        }
      }
    },
    "diagnosisEvidence": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "metric",
        "value",
        "detail"
      ],
      "properties": {
        "metric": {
          "type": "string",
          "minLength": 1
        },
        "value": {
          "type": "string"
        },
        "detail": {
          "type": "string",
          "minLength": 1
        }
      }
    }
  }
}
